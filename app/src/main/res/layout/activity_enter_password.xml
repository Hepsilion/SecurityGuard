<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgv_enter_password_appicon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tv_enter_password_appname"
        style="@style/wrapcontent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColor="@color/dark_gray"
        android:textSize="20sp"
        android:textScaleX="1.2"/>
    <LinearLayout
        android:id="@+id/ll_enter_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/coner_white_rec"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/enter_password_icon"/>
        <EditText
            android:id="@+id/et_enter_password_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:hint="@string/advanced_safe_password"
            android:inputType="textPassword"/>
        <ImageView
            android:id="@+id/imgv_enter_password_go"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/go_greenicon"/>
    </LinearLayout>
</LinearLayout>